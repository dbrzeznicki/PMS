    <UserControl x:Class="PMS.UserControlMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMS"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
        <Grid>
        <materialDesign:PackIcon Kind="{Binding Path=Icon}" Foreground="White" Height="14" Width="14"  Margin="9 15"/>
        <ListBoxItem Name="ListViewItemMenu" Content="{Binding Path=Name}" Foreground="White" Padding="36 13" FontSize="14"/>
            <Expander Name="ExpanderMenu" Header="{Binding Path=Name}" IsExpanded="False" Width="210" HorizontalAlignment="Right" Background="{x:Null}" Foreground="White">
            <ListView Name="ListViewMenu" ItemsSource="{Binding Path=SubItemsMenu}" Foreground="White" SelectionChanged="ListViewMenu_SwitchScreen">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                        <TextBlock Padding="19 4" Text="{Binding Path=Name}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Expander>
        </Grid>
    </UserControl>