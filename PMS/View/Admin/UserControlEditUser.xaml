<UserControl x:Class="PMS.UserControlEditUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel Height="Auto" VerticalAlignment="Top">
            <Grid Margin="10" Background="White" DockPanel.Dock="Top">
                <StackPanel Margin="10" Orientation="Horizontal">
                    <TextBlock Margin="10" Text="Select user: " VerticalAlignment="Center"/>
                    <ComboBox Margin="10" ItemsSource="{Binding Users}" DisplayMemberPath="SearchEditUser"
                                  SelectedItem="{Binding MySelectedUser}"/>
                </StackPanel>
            </Grid>

            <ScrollViewer>
                <Grid Margin="10">

                    <Grid.Resources>
                        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>



                    <Label>First name:</Label>
                    <TextBox Grid.Column="1" Margin="10" Text="{Binding Path = FirstName}"/>
                    <Label Grid.Row="1">Last name:</Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="10" Text="{Binding Path = LastName}"/>
                    <!--<Label Grid.Row="2">Login:</Label>
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="10" Text="{Binding Path = Login}"/>-->
                    <Label Grid.Row="2">Password:</Label>
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="10" Text="{Binding Path = Password}"/>
                    <!--<Label Grid.Row="4">User role:</Label>
                    <ComboBox Grid.Row="4" Grid.Column="1" Margin="10" ItemsSource="{Binding UsersRole}" DisplayMemberPath="Name"
                                  SelectedValuePath="Name" SelectedValue="{Binding UserRole}" SelectedIndex="1"/>-->

                    <Label Grid.Row="3">Salary:</Label>
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="10" Text="{Binding Path = Salary}"/>
                    <Label Grid.Row="4">Phone number:</Label>
                    <TextBox Grid.Row="4" Grid.Column="1" Margin="10" Text="{Binding Path = PhoneNumber}"/>
                    <Label Grid.Row="5">Email:</Label>
                    <TextBox Grid.Row="5" Grid.Column="1" Margin="10" Text="{Binding Path = Email}"/>
                    <Label Grid.Row="6" Visibility="{Binding VisibilityTeam}">Team:</Label>
                    <ComboBox Grid.Row="6" Visibility="{Binding VisibilityTeam}"  Grid.Column="1" Margin="10" ItemsSource="{Binding Teams}" DisplayMemberPath="Name"
                                  SelectedValuePath="Name" SelectedValue="{Binding Team}"/>

                    <Label Grid.Row="7">Hired date:</Label>
                    <DatePicker Grid.Row="7" Grid.Column="1" SelectedDate="{Binding HiredDate}" Margin="10"/>

                    <Label Grid.Row="8">Fired date:</Label>
                    <DatePicker Grid.Row="8" Grid.Column="1" SelectedDate="{Binding FiredDate}" Margin="10"/>
                    
                    
                    <Label Grid.Row="9">Residence street:</Label>
                    <TextBox Grid.Row="9" Grid.Column="1" Margin="10" Text="{Binding Path = ResidenceStreet}"/>
                    <Label Grid.Row="10">Residence house number:</Label>
                    <TextBox Grid.Row="10" Grid.Column="1" Margin="10" Text="{Binding Path = ResidenceHouseNumber}"/>
                    <Label Grid.Row="11">Residence apartment number:</Label>
                    <TextBox Grid.Row="11" Grid.Column="1" Margin="10" Text="{Binding Path = ResidenceApartmentNumber}"/>
                    <Label Grid.Row="12">Residence postcode:</Label>
                    <TextBox Grid.Row="12" Grid.Column="1" Margin="10" Text="{Binding Path = ResidencePostcode}"/>
                    <Label Grid.Row="13">Residence city:</Label>
                    <TextBox Grid.Row="13" Grid.Column="1" Margin="10" Text="{Binding Path = ResidenceCity}"/>

                    <CheckBox Name="Check" Grid.Row="14" Grid.Column="1" IsChecked="{Binding CheckBoxAdress}"
            Content="Adres korespondencyjny jest inny niż adres zameldowania"
            HorizontalAlignment="Left"
            Margin="10" />


                    <Label Grid.Row="15" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">Correspondence street:</Label>
                    <TextBox Grid.Row="15" Grid.Column="1" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="10" Text="{Binding Path = CorrespondenceStreet}"/>
                    <Label Grid.Row="16" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">Correspondence house number:</Label>
                    <TextBox Grid.Row="16" Grid.Column="1" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="10" Text="{Binding Path = CorrespondenceHouseNumber}"/>
                    <Label Grid.Row="17" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">Correspondence apartment number:</Label>
                    <TextBox Grid.Row="17" Grid.Column="1" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="10" Text="{Binding Path = CorrespondenceApartmentNumber}"/>
                    <Label Grid.Row="18" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">Correspondence postcode:</Label>
                    <TextBox Grid.Row="18" Grid.Column="1" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="10" Text="{Binding Path = CorrespondencePostcode}"/>
                    <Label Grid.Row="19" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">Correspondence city:</Label>
                    <TextBox  Grid.Row="19" Grid.Column="1" Visibility="{Binding ElementName=Check, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="10" Text="{Binding Path = CorrespondenceCity}"/>

                    <Button Name="EditAddUser" Grid.Row="20" Grid.Column="1" Command="{Binding EditUserButton}" IsEnabled="{Binding IsEnabledEditButton}">Edit user</Button>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
